@model Application.DTO.User.UserDTO
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h1 class="display-2 text-white">Edit user form</h1>
                </div>
                <div class="col-lg-6 col-5 text-right">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-12 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0"> </h3>
                        </div>
                        <div class="col-4 text-right">
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="pl-lg-4 col-lg-4">
                        <form role="form" method="post" action="@Url.Action("SubmitEditUser","Admin")">
                            <input type="text" id="Id" name="Id" value="@Model.Id" hidden />
                            <div class="form-group">
                                <div class="input-group input-group-merge input-group-alternative mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                                    </div>
                                    <input class="form-control" value="@Model.Fullname" type="text" name="Fullname" autofocus>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group input-group-merge input-group-alternative mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="ni ni-single-02"></i></span>
                                    </div>
                                    <input class="form-control" value="@Model.Username" type="text" name="Username">
                                </div>
                            </div>
                            <div class="row my-4">
                                <div class="col-12">
                                    <div class="custom-control custom-control-alternative custom-checkbox">
                                        @if(Model.IsAdmin)
                                        {
                                            <input class="custom-control-input" id="IsAdmin" type="checkbox" name="IsAdmin" value="true" onclick="$(this).attr('value', this.checked ? 'true' : 'false')" checked>
                                        }else
                                        {
                                            <input class="custom-control-input" id="IsAdmin" type="checkbox" name="IsAdmin" value="false" onclick="$(this).attr('value', this.checked ? 'true' : 'false')">
                                        }
                                        <label class="custom-control-label" for="IsAdmin">
                                            <span class="text-muted">Is Admin</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-4">
                                <div class="col-12">
                                    <div class="custom-control custom-control-alternative custom-checkbox">
                                        @if(Model.IsDisabled)
                                        {
                                            <input class="custom-control-input" id="IsDisabled" type="checkbox" name="IsDisabled" value="true" onclick="$(this).attr('value', this.checked ? 'true' : 'false')" checked>
                                        }else
                                        {
                                            <input class="custom-control-input" id="IsDisabled" type="checkbox" name="IsDisabled" value="false" onclick="$(this).attr('value', this.checked ? 'true' : 'false')">
                                        }
                                        <label class="custom-control-label" for="IsDisabled">
                                            <span class="text-muted">Is Disabled</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning mt-4">Edit User</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
